{
  "manifest_version": 3,
  "name": "BandLab Theme Customizer",
  "version": "0.1.0",
  "description": "Customize the colors and themes of BandLab. (by: aidenwrld)",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.bandlab.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.bandlab.com/*"],
      "js": ["content.js"],
      "css": ["default-theme.css"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["themes/*.css"],
      "matches": ["*://*.bandlab.com/*"]
    }
  ]
}
